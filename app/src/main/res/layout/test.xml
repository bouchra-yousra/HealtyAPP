<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout3">

    <RelativeLayout
        android:layout_width="602dp"
        android:layout_height="199dp"
        android:background="@drawable/test_customlayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textView42"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito"
                            android:gravity="center|end"
                            android:text="Welcome "
                            android:textColor="@color/white"
                            android:textColorHint="@color/bleu_gris_fonçe"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito"
                            android:gravity="center|start|center_horizontal|left"
                            android:text="Welcome "
                            android:textColor="@color/white"
                            android:textColorHint="@color/bleu_gris_fonçe"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/besoinEnergitique2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Your Energy Need"
                            android:textColor="@color/txt2"
                            android:textColorHint="@color/bleu_gris_fonçe"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="track your calories progresion"
                            android:textColor="@color/colorPrimary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="@+id/progressBarNutrition"
                                app:layout_constraintEnd_toEndOf="@+id/progressBarNutrition"
                                app:layout_constraintStart_toStartOf="@+id/progressBarNutrition"
                                app:layout_constraintTop_toTopOf="@+id/progressBarNutrition">

                                <TextView
                                    android:id="@+id/newcl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="18sp"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="/"
                                    android:textColor="#000000"
                                    android:textSize="18sp"

                                    />

                                <TextView
                                    android:id="@+id/textHome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressBarNutrition"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_gravity="center"

                                android:layout_marginStart="105dp"

                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="106dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/cirlcenurt"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" " />

                                    <TextView
                                        android:id="@+id/protine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 kcal" />
                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/proprotine"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textView54"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="lipide" />

                                    <TextView
                                        android:id="@+id/lipide"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 kcal" />
                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/prolipide"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="glucide" />

                                    <TextView
                                        android:id="@+id/glucide"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 kcal" />
                                </LinearLayout>

                                <ProgressBar
                                    android:id="@+id/proglucide"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:text="Today's workout"
                        android:textColor="@color/white"
                        android:textColorHint="@color/bleu_gris_fonçe"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="1dp"
                                    app:cardCornerRadius="30dp">

                                    <LinearLayout
                                        android:id="@+id/layout_home_exo1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <TextView
                                            android:id="@+id/rec_exo1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Jamping jaks" />

                                        <TextView
                                            android:id="@+id/rec_exo1_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="5min" />

                                        <TextView
                                            android:id="@+id/rec_exo1_kcl"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TextView" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="1dp"
                                    app:cardCornerRadius="30dp">

                                    <LinearLayout
                                        android:id="@+id/layout_home_exo2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <TextView
                                            android:id="@+id/rec_exo2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Jamping jaks" />

                                        <TextView
                                            android:id="@+id/rec_exo2_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="5min" />

                                        <TextView
                                            android:id="@+id/rec_exo2_kcl"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TextView" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="1dp"
                                    app:cardCornerRadius="30dp">

                                    <LinearLayout
                                        android:id="@+id/layout_home_exo3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <TextView
                                            android:id="@+id/rec_exo3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Jamping jaks" />

                                        <TextView
                                            android:id="@+id/rec_exo3_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="5min" />

                                        <TextView
                                            android:id="@+id/rec_exo3_kcl"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TextView" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="1dp"
                                    app:cardCornerRadius="30dp">

                                    <LinearLayout
                                        android:id="@+id/layout_home_exo4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <TextView
                                            android:id="@+id/rec_exo4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Jamping jaks" />

                                        <TextView
                                            android:id="@+id/rec_exo4_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="5min" />

                                        <TextView
                                            android:id="@+id/rec_exo4_kcl"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="TextView" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Track your weight"
                            android:textColor="@color/txt2"
                            android:textColorHint="@color/bleu_gris_fonçe"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark">

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView50"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:text="Do you have an ideal weight?"
                                android:textColor="@color/txt3"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:text="All you have to do is to update your weight every week, to get your weight progression" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ListView
                                android:id="@+id/list_weight_traker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fadingEdge="horizontal"
                                android:requiresFadingEdge="horizontal"
                                android:scrollbars="horizontal" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/weight"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_button6"
                            android:fadingEdge="horizontal"
                            android:requiresFadingEdge="horizontal"
                            android:scrollbars="horizontal"
                            android:text="Today's weight"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:text="Do want to built a mood traker?"
                            android:textColor="@color/txt3"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Track your mood"
                            android:textColor="@color/txt2"
                            android:textColorHint="@color/bleu_gris_fonçe"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark">

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select your mood to built a mood traker" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ListView
                                android:id="@+id/list_mood_traker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fadingEdge="horizontal"
                                android:scrollbars="vertical" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/advice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Advice" />

                        <Button
                            android:id="@+id/mood"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_button6"
                            android:fadingEdge="horizontal"
                            android:requiresFadingEdge="horizontal"
                            android:scrollbars="horizontal"
                            android:text="Mood"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>